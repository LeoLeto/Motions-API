                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "dalleAssetInterface": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Unique identifier for the asset"
          },
          "prompt": {
            "type": "string",
            "description": "Text prompt used to generate the asset"
          },
          "orientation": {
            "type": "string",
            "description": "Orientation of the asset",
            "enum": ["square", "horizontal", "vertical"]
          },
          "isTransparent": {
            "type": "boolean",
            "description": "Indicates if the asset has a transparent background"
          },
          "description": {
            "type": "string",
            "description": "Description of the asset"
          },
          "width": {
            "type": "integer",
            "description": "Width of the asset in pixels"
          },
          "height": {
            "type": "integer",
            "description": "Height of the asset in pixels"
          },
          "revisedPrompt": {
            "type": "string",
            "description": "Revised prompt used by DALL路E"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags associated with the asset"
          },
          "url": {
            "type": "string",
            "description": "URL where the asset is stored"
          }
        },
        "required": [
          "prompt",
          "isTransparent",
          "orientation",
          "description",
          "tags"
        ]
      },
      "textToSpeechResponse": {
        "type": "object",
        "properties": {
          "task": {
            "type": "string",
            "description": "Task performed, e.g., transcribe"
          },
          "language": {
            "type": "string",
            "description": "Language of the input text"
          },
          "duration": {
            "type": "number",
            "format": "float",
            "description": "Duration of the audio in seconds"
          },
          "text": {
            "type": "string",
            "description": "Transcription of the audio"
          },
          "words": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "word": {
                  "type": "string",
                  "description": "Word in the transcription"
                },
                "start": {
                  "type": "number",
                  "format": "float",
                  "description": "Start time of the word in seconds"
                },
                "end": {
                  "type": "number",
                  "format": "float",
                  "description": "End time of the word in seconds"
                }
              }
            },
            "description": "List of words with start and end timestamps"
          }
        }
      },
      "Rectangle": {
        "type": "object",
        "properties": {
          "x": { "type": "integer" },
          "y": { "type": "integer" },
          "w": { "type": "integer" },
          "h": { "type": "integer" }
        }
      },
      "ObjectDetail": {
        "type": "object",
        "properties": {
          "rectangle": { "$ref": "#/components/schemas/Rectangle" },
          "object": { "type": "string" },
          "confidence": { "type": "number" },
          "parent": {
            "type": "object",
            "properties": {
              "object": { "type": "string" },
              "confidence": { "type": "number" }
            }
          }
        }
      },
      "VisionResponse": {
        "type": "object",
        "properties": {
          "objects": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ObjectDetail" }
          },
          "requestId": { "type": "string" },
          "metadata": {
            "type": "object",
            "properties": {
              "height": { "type": "integer" },
              "width": { "type": "integer" },
              "format": { "type": "string" }
            }
          },
          "modelVersion": { "type": "string" }
        }
      },
      "CroppedObject": {
        "type": "object",
        "properties": {
          "prompt": { "type": "string" },
          "orientation": {
            "type": "string",
            "enum": ["square", "horizontal", "vertical"]
          },
          "isTransparent": { "type": "boolean" },
          "code": { "type": "string" },
          "width": { "type": "integer" },
          "height": { "type": "integer" },
          "revisedPrompt": { "type": "string" },
          "description": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "url": { "type": "string" },
          "scene": { "$ref": "#/components/schemas/ObjectDetail" },
          "_id": { "type": "string" }
        }
      },
      "AnalyzeImageResponse": {
        "type": "object",
        "properties": {
          "visionResponse": {
            "$ref": "#/components/schemas/VisionResponse"
          },
          "croppedObjects": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CroppedObject" }
          }
        }
      }
    }
  }
}
