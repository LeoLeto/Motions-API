{
  "openapi": "3.0.1",
  "info": {
    "title": "Motions API",
    "description": "API for creating, managing, and analyzing DALL路E and other AI-generated assets.",
    "version": "1.0.0"
  },
  "paths": {
    "/dalleAsset": {
      "post": {
        "summary": "Create DALL路E Asset",
        "operationId": "createDalleAsset",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/dalleAssetInterface"
                }
              },
              "examples": {
                "example-1": {
                  "summary": "Example Asset Creation Request",
                  "value": [
                    {
                      "prompt": "A new animal that's half-cat half-parrot",
                      "isTransparent": true,
                      "orientation": "square",
                      "description": "Description of the asset",
                      "tags": ["tag 1", "tag 2"]
                    }
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assets created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/dalleAssetInterface"
                  }
                },
                "examples": {
                  "example-1": {
                    "summary": "Example Asset Creation Response",
                    "value": [
                      {
                        "prompt": "A new animal that's half-cat half-parrot",
                        "orientation": "square",
                        "isTransparent": true,
                        "code": "21b77fd6-1dbd-4722-b401-3ba118ae56ed",
                        "width": 1024,
                        "height": 1024,
                        "revisedPrompt": "Imagine a new species of animal, a blend between a cat and a parrot...",
                        "description": "Description of the asset",
                        "tags": ["tag 1", "tag 2"],
                        "url": "https://sophieassets.blob.core.windows.net/motion-ai/21b77fd6-1dbd-4722-b401-3ba118ae56ed.png",
                        "_id": "66d398faa119d28f5fd4f2ac"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "delete": {
        "summary": "Delete DALL路E Asset",
        "operationId": "deleteDalleAsset",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique code of the asset to be deleted"
          }
        ],
        "responses": {
          "200": {
            "description": "Asset deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/textToSpeech": {
      "post": {
        "summary": "Convert Text to Speech",
        "operationId": "textToSpeech",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "Text": {
                    "type": "string",
                    "description": "The text to be converted to speech"
                  }
                },
                "required": ["Text"]
              },
              "examples": {
                "example-1": {
                  "summary": "Example Text-to-Speech Request",
                  "value": {
                    "Text": "This is a test."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Speech and transcription generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/textToSpeechResponse"
                },
                "examples": {
                  "example-1": {
                    "summary": "Example Text-to-Speech Response",
                    "value": {
                      "task": "transcribe",
                      "language": "english",
                      "duration": 0.86,
                      "text": "This is a test.",
                      "words": [
                        {
                          "word": "This",
                          "start": 0,
                          "end": 0.2
                        },
                        {
                          "word": "is",
                          "start": 0.2,
                          "end": 0.34
                        },
                        {
                          "word": "a",
                          "start": 0.34,
                          "end": 0.48
                        },
                        {
                          "word": "test",
                          "start": 0.48,
                          "end": 0.72
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/analyzeImage": {
      "post": {
        "summary": "Analyze an image using Azure Vision API, crop detected objects and upload them to Azure blob storage",
        "operationId": "analyzeImage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": { "type": "string" }
                },
                "required": ["url"]
              },
              "example": {
                "url": "https://example.com/image.jpg"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Analysis of the image and cropped objects",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnalyzeImageResponse"
                },
                "example": {
                  "visionResponse": {
                    "objects": [
                      {
                        "rectangle": { "x": 338, "y": 46, "w": 167, "h": 161 },
